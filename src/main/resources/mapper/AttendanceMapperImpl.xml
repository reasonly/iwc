<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.iworkcloud.mapper.AttendanceMapper">

    <resultMap id="BaseResultMap" type="com.iworkcloud.pojo.Attendance">
        <result column="attendance_id" property="attendanceId" />
        <result column="user_id" property="userId" />
        <result column="attendance_state" property="attendanceState" />
        <result column="attendance_time" property="attendanceTime" />
        <result column="date" property="date" />
    </resultMap>


    <parameterMap id="Attendance" type="com.iworkcloud.pojo.Attendance"/>

    <sql id="Base_Column_List">
        attendance_id, user_id, attendance_state,attendance_time,date
    </sql>

    <insert id="insert" parameterMap="Attendance">
        insert into t_attendance (attendancename, password, age)
        values (#{attendancename},#{password},#{age})

    </insert>


    <update id="update" parameterMap="Attendance">
        update
        attendance
        <trim prefix="set" suffixOverrides=",">
            <if test="attendancename!=null and attendancename!=''">
                attendancename = #{attendancename},
            </if>
            <if test="password!=null and password!=''">
                password = #{password},
            </if>
            <if test="age!=null and age!=''">
                age = #{age},
            </if>
        </trim>
        where id= #{id}
    </update>

    <delete id="delete" parameterType="Integer">
        delete from  attendance where id=#{id}
    </delete>

    <select id="findAll" resultMap="BaseResultMap" >
        select
            *
        from attendance
    </select>

    <select id="findByEntity" parameterMap="Attendance" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"></include>
        from attendance
        <where>
            <if test="attendancename!=null and attendancename!=''">
                and attendancename = #{attendancename}
            </if>
            <if test="password!=null and password!=''">
                and password = #{password}
            </if>
            <if test="age!=null and age!=''">
                and age = #{age}
            </if>
        </where>
    </select>


    <select id="findByUserId" parameterType="Integer" resultMap="BaseResultMap">
        select <include refid="Base_Column_List" />
        from t_attendance where user_id = #{userId}
    </select>
</mapper>
