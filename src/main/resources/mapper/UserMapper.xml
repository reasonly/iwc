<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.iworkcloud.mapper.UserMapper">

	<resultMap id="BaseResultMap" type="com.iworkcloud.pojo.entity.User">
		<result column="user_id" property="userId" />
		<result column="user_name" property="userName" />
		<result column="user_account" property="userAccount" />
		<result column="user_password" property="userPassword" />
		<result column="user_authority" property="userAuthority" />
		<result column="user_salt" property="userSalt" />
	</resultMap>


	<parameterMap id="User" type="com.iworkcloud.pojo.entity.User"/>

	<sql id="Base_Column_List">
		user_id, user_name, user_account,user_password,user_authority,user_salt
	</sql>

	<insert id="insert" parameterMap="User">
		insert into t_user (username, password, age)
		values (#{username},#{password},#{age})
	</insert>


	<update id="update" parameterMap="User">
		update
		 	 user
		<trim prefix="set" suffixOverrides=",">
			<if test="username!=null and username!=''">
				username = #{username},
			</if>
			<if test="password!=null and password!=''">
				password = #{password},
			</if>
			<if test="age!=null and age!=''">
				age = #{age},
			</if>
		</trim>
		  where id= #{id}
	</update>

	<delete id="delete" parameterType="Integer">
		delete from  user where id=#{id}
	</delete>

	<select id="findAll" resultMap="BaseResultMap" >
		select
		*
		from user
	</select>

	<select id="findByEntity" parameterMap="User" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List"></include>
		from user
		<where>
			<if test="username!=null and username!=''">
				and username = #{username}
			</if>
			<if test="password!=null and password!=''">
				and password = #{password}
			</if>
			<if test="age!=null and age!=''">
				and age = #{age}
			</if>
		</where>
	</select>




	<!--	查询盐值信息-->
	<select id="findSaltByUserAccount" parameterType="String" resultType="String">
		select
			user_salt
		from t_user where user_account=#{userAccount}
	</select>
	<!--验证用户登录信息-->
	<select id="findByUsernameAndPassword" parameterMap="User" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List"></include>
		from t_user where user_account=#{userAccount} and user_password=#{userPassword}
	</select>
</mapper>
